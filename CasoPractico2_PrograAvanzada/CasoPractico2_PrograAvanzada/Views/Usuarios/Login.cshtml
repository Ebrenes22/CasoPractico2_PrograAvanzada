@model CasoPractico2_PrograAvanzada.Models.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .login-container {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-card {
        width: 100%;
        max-width: 400px;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        background-color: #ffffff;
    }
</style>

<div class="login-container">
    <div class="login-card">
        <h2 class="text-center mb-4">Iniciar Sesión</h2>

        @if (ViewBag.Mensaje != null)
        {
            <div class="alert alert-success text-center">@ViewBag.Mensaje</div>
        }

        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="NombreUsuario" class="form-label"></label>
                <input asp-for="NombreUsuario" class="form-control" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Contrasena" class="form-label"></label>
                <input asp-for="Contrasena" class="form-control" type="password" />
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Iniciar sesión</button>
        </form>

        <div class="text-center mt-3">
            <a asp-action="OlvidoContrasena" class="text-muted">¿Olvidaste tu contraseña?</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}