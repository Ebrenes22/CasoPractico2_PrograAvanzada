@model CasoPractico2_PrograAvanzada.Models.OlvidoContrasenaViewModel

@{
    ViewData["Title"] = "Recuperar Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .login-container {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-card {
        width: 100%;
        max-width: 400px;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        background-color: #ffffff;
    }
</style>

<div class="login-container">
    <div class="login-card">
        <h2 class="text-center mb-4">Recuperar Contraseña</h2>

        <form asp-action="OlvidoContrasena" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Correo" class="form-label"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="NuevaContrasena" class="form-label"></label>
                <input asp-for="NuevaContrasena" type="password" class="form-control" />
                <span asp-validation-for="NuevaContrasena" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Actualizar Contraseña</button>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Login" class="text-muted">Volver al inicio de sesión</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}