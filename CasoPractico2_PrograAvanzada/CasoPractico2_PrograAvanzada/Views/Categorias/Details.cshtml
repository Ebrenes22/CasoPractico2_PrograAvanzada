@model CasoPractico2_PrograAvanzada.Models.Categoria

@{
    ViewData["Title"] = "Detalles de Categoría";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles de Categoría</h2>

<div class="form-group">
    <label><strong>Nombre:</strong></label>
    <p>@Model.Nombre</p>
</div>

<div class="form-group">
    <label><strong>Descripción:</strong></label>
    <p>@Model.Descripcion</p>
</div>

<div class="form-group">
    <label><strong>Estado:</strong></label>
    <p>@Model.Estado</p>
</div>

<div class="form-group">
    <label><strong>Fecha de Registro:</strong></label>
    <p>@Model.FechaRegistro.ToString("dd/MM/yyyy")</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.CategoriaId" class="btn btn-primary">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver al listado</a>